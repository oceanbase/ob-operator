# Build the manager binary
FROM golang:1.25 AS builder

ARG GOPROXY
ARG GOSUMDB
ARG RACE

WORKDIR /workspace
# copy everything
COPY . .
RUN make operator

# start build docker image
FROM openanolis/anolisos:8.8
WORKDIR /
COPY --from=builder /workspace/bin/manager .
RUN ln -sf /usr/share/zoneinfo/Asia/Shanghai /etc/localtime
USER 65534:65534

ENTRYPOINT ["/manager"]
